# API Orchestrator Environment Configuration
# Copy this file to .env and update with your production values

# Security Settings
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=sqlite:///./api_orchestrator.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/api_orchestrator

# AI API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
AI_KEY_ENCRYPTION_KEY=your-encryption-key-for-ai-keys

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true

# Email Settings (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@streamapi.dev
EMAIL_FROM_NAME=StreamAPI
EMAIL_ENABLED=false

# Frontend Configuration
FRONTEND_URL=https://streamapi.dev

# Enterprise SSO (optional)
SAML_ENABLED=false
SAML_X509_CERT=your-saml-cert
SAML_PRIVATE_KEY=your-saml-private-key
OIDC_CLIENT_ID=your-oidc-client-id
OIDC_CLIENT_SECRET=your-oidc-client-secret

# Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_ENABLED=false

# Development Settings
DB_ECHO=false
DEBUG=false

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT_MINUTES=15

# File Upload
MAX_UPLOAD_SIZE=10485760

# Mock Server Settings
MOCK_SERVER_PORT_RANGE_START=9000
MOCK_SERVER_PORT_RANGE_END=9100