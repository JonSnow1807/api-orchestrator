{
  "name": "api-orchestrator",
  "version": "1.0.0",
  "description": "StreamAPI - API Orchestration Platform",
  "scripts": {
    "install": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && python -m uvicorn src.main:app --host 0.0.0.0 --port $PORT",
    "dev": "cd frontend && npm run dev"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.10.0"
  }
}