# API Orchestrator Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# CORE CONFIGURATION (Required)
# ===========================================

# Django/FastAPI secret key for signing sessions
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-min-32-chars

# Database configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/api_orchestrator
POSTGRES_DB=api_orchestrator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-password

# Redis configuration for caching and queues
REDIS_URL=redis://:redis_password@localhost:6379/0
REDIS_PASSWORD=change-this-password

# ===========================================
# AI SERVICES (Optional - for AI features)
# ===========================================

# Anthropic Claude API for AI-powered analysis
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# OpenAI API (alternative AI provider)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Docker registry (default: GitHub Container Registry)
DOCKER_REGISTRY=ghcr.io
GITHUB_REPOSITORY=jonsnow1807/api-orchestrator
VERSION=latest

# Your domain name (for SSL and CORS)
DOMAIN=api-orchestrator.com
CORS_ORIGINS=https://api-orchestrator.com,http://localhost:5173

# Environment mode
ENVIRONMENT=production

# ===========================================
# EMAIL CONFIGURATION (For password reset)
# ===========================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
# For Gmail, use App Password: https://support.google.com/accounts/answer/185833
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_FROM=noreply@api-orchestrator.com

# ===========================================
# GITHUB ACTIONS SECRETS (For CI/CD)
# ===========================================
# Add these as GitHub repository secrets:
# https://github.com/YOUR_USERNAME/api-orchestrator/settings/secrets/actions

# For VPS deployment:
# - VPS_HOST: Your server IP address
# - VPS_USER: SSH username (usually 'root' or 'ubuntu')
# - VPS_SSH_KEY: Private SSH key content

# For cloud platforms:
# - DO_TOKEN: DigitalOcean API token
# - AWS_ACCESS_KEY_ID: AWS access key
# - AWS_SECRET_ACCESS_KEY: AWS secret key
# - RAILWAY_TOKEN: Railway deployment token
# - RENDER_DEPLOY_HOOK: Render deploy webhook URL

# ===========================================
# MONITORING & ANALYTICS (Optional)
# ===========================================

# Sentry for error tracking
# Get from: https://sentry.io/
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Slack webhook for notifications
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# ===========================================
# SECURITY & RATE LIMITING
# ===========================================

# JWT token settings
JWT_SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Security headers
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# ===========================================
# DEVELOPMENT OVERRIDES (Local development only)
# ===========================================

# Uncomment for local development
# ENVIRONMENT=development
# DEBUG=true
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# DATABASE_URL=sqlite:///./api_orchestrator.db